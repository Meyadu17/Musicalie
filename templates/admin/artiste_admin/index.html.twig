{% extends 'admin/base_admin.html.twig' %}

{% block title %}Artistes{% endblock %}

{% block contenu %}
    <section class="admin_body_container">
        <a class="btn btn-info" href="{{ path('app_admin_artiste_ajouter') }}">Nouvel artiste</a>
    </section>
    <br>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success" role="alert">
            {{ message }}
        </div>
    {% endfor %}

    <table class="table">
        <thead>
        <tr>
            <th scope="col">Nom de l'artiste</th>
            <th scope="col">Style de musique</th>
            <th scope="col">Action</th>
        </tr>
        </thead>
        <tbody >
        {% for artiste in artistes %}
            <tr>
                <th>{{artiste.nomScene}}</th>
                <td>{{artiste.style}}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('app_admin_artiste_modifier', {'id': artiste.id}) }}">Modifier</a>
                    <a class="btn btn-danger" onclick="return confirm('Êtes-vous sûr ?')" href="{{ path('app_admin_artiste_supprimer', {'id': artiste.id}) }}">Supprimer</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
